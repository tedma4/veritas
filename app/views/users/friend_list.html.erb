<h1>Friend List</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>User name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% if @users.present? %>
	    <% @users.each do |user| %>
	      <tr>
	        <td><%= user['first_name'] %></td>
	        <td><%= user['last_name'] %></td>
	        <td><%= user['user_name'] %></td>
					<td><%= image_tag(user.avatar.url, size: '50') if user.avatar.url %></td>
	        <td><%= link_to 'Show', "/users/#{user['id']}" %></td>
	        <td><%= link_to 'Edit', "/users/#{user['id']}/edit" %></td>
	        <td>
					  <%= link_to 'Un-friend', remove_friend_path(user: user['id']), method: :delete, remote: true, data: { confirm: 'Are you sure?' } %>
	        </td>
	      </tr>
	    <% end %>
    <% end %>
  </tbody>
</table>