<!DOCTYPE html>
<html>
<head>
  <title>Veritas</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<%= content_tag(:div, flash[:error], :id => "flash_error") if flash[:error] %>
<%= content_tag(:div, flash[:notice], :id => "flash_notice") if flash[:notice] %>
<%= content_tag(:div, flash[:alert], :id => "flash_alert") if flash[:alert] %>
<% if user_signed_in? %>
	<%= link_to 'Post List', "/" %>
	<%= link_to 'User List', "/users" %>
	<%= link_to 'Edit profile', edit_user_registration_path %>
	<%= link_to 'map', "/map" %>
	<%= link_to 'new areas', "/areas/new" %>
	<%= link_to 'area list', "/areas" %>
	<%= link_to 'signout', destroy_user_session_path(current_user), method: :delete %>
	<%= form_tag search_path, method: 'get' do %>
	  <button type="submit" style="color: #00eebc;">Go</button>
	  <%= text_field_tag :search, params[:search], placeholder: "Users" %>
	<% end %>
<% end %>

<%= yield %>

</body>
</html>
